<Window x:Class="CarViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarViewer"
        mc:Ignorable="d"
        Title="Car Viewer" Icon="Images/Car.ico"
        MinHeight="200" Height="270"
        MinWidth="180" Width="533"
        Loaded="FormLoad" >
    <Grid x:Name="buttonExit" Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition MinWidth="50" Width="190"/>
            <ColumnDefinition Width="79" MaxWidth="300"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition MinHeight="35" Height="40"/>
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <Label Content="_Make:" Grid.Column="2" Target="{Binding ElementName=textMake}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="14,17,0,0" Width="42" RenderTransformOrigin="0.841,0.5"/>
        <ComboBox x:Name="comboMake"  MinWidth="60" Grid.Row="0" Grid.Column="2"  Margin="67,10,50,0" ToolTip="Displays the make of the car." VerticalContentAlignment="Center"/>
        <!-- Row 1 -->
        <Label Content="M_odel:" Grid.Row="1" Grid.Column="2" Target="{Binding ElementName=textModel}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="10,18,0,0" Width="46" RenderTransformOrigin="0.314,0.586"/>
        <TextBox x:Name="textModel"  MinWidth="60" Grid.Row="1" Grid.Column="2" Margin="66,8,50,4" ToolTip="Displays the model of the car" VerticalContentAlignment="Center"/>
        <!-- Row 2 -->
        <Label Content="_Year:" Grid.Row="2" Grid.Column="2" Target="{Binding ElementName=textYear}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="34" Margin="10,0,0,0"/>
        <ComboBox x:Name="comboYear"  MinWidth="60" Grid.Row="2" Grid.Column="2" Margin="66,10,51,53" ToolTip="Displays the year of the car" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
        <!-- Row 3 -->
        <Label Content="_Price:" Grid.Row="3" Grid.Column="2" Target="{Binding ElementName=textPrice}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="10,8,0,0" Width="38"/>
        <TextBox x:Name="textPrice"  MinWidth="60" Grid.Row="3" Grid.Column="2" Margin="67,5,50,5" ToolTip="Displays the price of the car" VerticalContentAlignment="Center"/>
        <!-- Row 4 -->

        <Button x:Name="buttonFirst" Content="_First" MinWidth="45" ToolTip="Click to go to the first car in the list" Click="ShowFirstCar" Grid.ColumnSpan="3" Margin="12,4,188,6" Grid.Row="4"/>
        <Button x:Name="buttonPrevious" Content="Pre_vious" MinWidth="45" Margin="136,4,2,5" ToolTip="Click to go to the previous car in the list" Click="ShowPreviousCar" Grid.Column="2" Grid.Row="4"/>
        <Button x:Name="buttonNext" Content="_Next" MinWidth="45" Margin="74,4,58,5" ToolTip="Click to go to the next car in the list" Click="ShowNextCar" Grid.Column="2" Grid.Row="4" RenderTransformOrigin="0.072,-0.182"/>
        <Button x:Name="buttonLast" Content="_Last" MinWidth="45" ToolTip="Click to go to the last car in the list" Click="ShowLastCar" Grid.Column="2" Margin="10,4,122,6" Grid.Row="4"/>


        <Button x:Name="buttonReset" Content="_Reset" HorizontalAlignment="Center" Margin="0,3,0,0" Grid.Row="2" VerticalAlignment="Top" Width="42" Height="31" ToolTip="Click here to reset " Click="buttonReset_Click" Grid.Column="1"/>
        <Button x:Name="buttonEnter" Content="_Enter" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Width="42" Height="29" ToolTip="Click here to enter a car" Click="buttonEnter_Click" Grid.Column="1" Margin="0,7,0,0"/>
        <CheckBox x:Name="checkIsNew" Grid.Column="3" Content="New Car" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top" Width="64" Height="15" FontSize="10" RenderTransformOrigin="0.5,0.5" ToolTip="Check if the car is new or used">
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.054"/>
                    <TranslateTransform/>
                </TransformGroup>
            </CheckBox.RenderTransform>
        </CheckBox>
        <Label x:Name="LabelResult" Grid.Column="2" Content="" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" ToolTip="Displays a message if the car has been added or already exists " Width="322" Height="40" Margin="145,9,0,0" Grid.ColumnSpan="4"/>
        <Button x:Name="buttonExit1" Content="E_xit" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Height="27" Width="42" ToolTip="Click to exit the app" Click="buttonExit_Click" Grid.Column="1" Margin="0,5,0,0"/>
        <ListBox x:Name="listCars" Grid.Column="3" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="3" Grid.ColumnSpan="3" Margin="3,0,0,0" ToolTip="Displays the cars that has been entered"/>



    </Grid>

</Window>
